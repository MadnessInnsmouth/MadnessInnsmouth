<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AssemblyName>FM26AccessibilityPlugin</AssemblyName>
    <Description>Football Manager 2026 Accessibility Plugin for Screen Readers (IL2CPP)</Description>
    <Version>1.0.0</Version>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- BepInEx 6 IL2CPP framework (from BepInEx NuGet feed) -->
    <PackageReference Include="BepInEx.Unity.IL2CPP" Version="6.0.0-pre.2" />
    <PackageReference Include="BepInEx.PluginInfoProps" Version="2.*" />
  </ItemGroup>

  <ItemGroup>
    <!--
      IL2CPP interop assemblies generated from FM26's GameAssembly.dll via Cpp2IL / Il2CppInterop.
      These are placed in lib/interop/ by the build script or manually by the developer.
    -->
    <Reference Include="Il2Cppmscorlib" HintPath="..\..\lib\interop\Il2Cppmscorlib.dll" Private="false" />
    <Reference Include="Il2CppUnityEngine" HintPath="..\..\lib\interop\Il2CppUnityEngine.dll" Private="false" />
    <Reference Include="Il2CppUnityEngine.CoreModule" HintPath="..\..\lib\interop\Il2CppUnityEngine.CoreModule.dll" Private="false" />
    <Reference Include="Il2CppUnityEngine.UI" HintPath="..\..\lib\interop\Il2CppUnityEngine.UI.dll" Private="false" />
    <Reference Include="Il2CppUnityEngine.TextRenderingModule" HintPath="..\..\lib\interop\Il2CppUnityEngine.TextRenderingModule.dll" Private="false" />
    <Reference Include="Il2CppUnityEngine.InputLegacyModule" HintPath="..\..\lib\interop\Il2CppUnityEngine.InputLegacyModule.dll" Private="false" />
  </ItemGroup>

</Project>
